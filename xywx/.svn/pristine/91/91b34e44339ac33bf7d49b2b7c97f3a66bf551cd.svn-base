*{
    padding: 0;
    margin: 0;
}
html,body{
    font-family: '微软雅黑', '楷体','Microsoft YaHei';
    line-height:22px;
    font-size:12px;
    color:#606060;
    margin: auto;
}
.list_sum{
    min-width: 1200px;
    margin: auto;
}
.list_model{
    width: 1000px;
    margin: auto;
}
/*头部样式*/
.list_title{
    width: 1000px;
    height: 50px;
    line-height: 50px;
    margin-top: 20px;
    border-bottom: solid 1px rgb(232,232,232);
}
.title_title{
    display: inline-block;
}
.title_right{
    display: inline-block;
    float: right;
}
.title_right a{
    text-decoration: none;
    color: #606060;
}
.title_right a:hover{
    text-decoration: underline;
    color: indianred;
}
/*列表样式*/
.list_list{
    width: 600px;
    margin: auto;
}
.list_list ul li{
    list-style: none;
    height: 40px;
    line-height: 40px;
    border-bottom: dotted 1px rgb(232,232,232);
}
.list_left{
    display: inline-block;
    padding-right: 5px;
   /*  width: 100px; */
    color: rgba(60,60,60,0.8);
}
.list_list ul li a{
    display: inline-block;
    height: 40px;
    line-height: 40px;
    text-decoration: none;
    color: #606060;
}
.list_list ul li a:hover{
    text-decoration: underline;
    color: indianred;
}
/*分页页码样式*/
.page{
    height: 20px;
    line-height:20px;
}
.page ul{
    float: right;
    height: 20px;
}
.page ul li{
    display: inline-block;
    height: 20px;

}
.page .l-left,.page .l-right{
    width: 26px;
    height: 20px;
    border: solid 1px #606060;
    border-radius: 3px;
}



