*{
    padding: 0;
    margin: 0;
}
html,body{
    font-family: '微软雅黑', '楷体','Microsoft YaHei';
    line-height:22px;
    font-size:12px;
    color:#606060;
}
/*让所有的a标签都有hover样式*/
a:hover{
	text-decoration: underline;
    color: indianred;
    cursor: pointer;
}
.wrapper{
    min-width: 1200px;
    margin: auto;
}
/*时间显示样式开始*/
.top_1{
    min-width: 1200px;
    height: 36px;
    line-height: 36px;
    background: url(../images_pc/top_time.jpg) repeat-x;
    border-bottom:1px solid #d0d0d0;
    margin: auto;
}
.width{
    width: 1200px;
    margin: auto;
}
.timer{
    display: inline-block;
}
.login_a{
    display: inline-block;
    float: right;
}
.login_a a:hover{
    text-decoration: underline;
    color: indianred;
    cursor: pointer;
}
/*时间显示样式结束*/
/*轮播图显示样式开始*/
.carousel_top{
    height: 180px;
}
.sections, .section {
    height: 180px;
}
#container{
    height: 180px;
}
.section{
    background-size: cover;
    background-position: 50% 50%;
    text-align: center;
    min-width: 1200px;
}
#section0 {
    background-image: url(../images_pc/public_top_lunbo1.jpg);
}
#section1 {
    background-image: url(../images_pc/public_top_lunbo2.jpg);
}
/*轮播图显示样式结束*/
/*头部导航显示样式开始*/
.dd-navigation {
    min-width:1200px;
    height:42px;
    background:#2AABE7;
    text-align: center;
}
.nav-strip {
    width:1200px;
    height:42px;
    line-height:42px;
    position:relative;
    margin: auto;
    z-index:2;
}
.nav-strip ul li{
    list-style: none;
}
.nav-strip a{text-decoration:none;}
.nav-strip a:hover {text-decoration:none;}
.nav-strip .nav-item {
    display: inline;
    float: left;
    position:relative;
    width:110px;
    height:42px;
    text-align:center;
}
.nav-item .subnav{
    display: none;
    z-index: 1;
}
.nav-item:hover .subnav{
    display: block;
}
.nav-item:hover .subnav .aa span a:hover{
    background:#2AABE7;
}
.nav-strip .nav-item:hover a{
    background:#2793C9;
    color:#fff;
    text-align:center;
}
.nav-strip ul li a{
    color: #fff;
    display:block;
    padding:0px;
    font-size: 15px !important;
    height:42px;
}
.nav-strip ul li span a{
    color: #fff;
    text-align:left;
    display:block;
    font-size: 12px !important;
    height:42px;
}
.subnav-inner .aa span a:hover{

}
/*头部导航显示样式结束*/
/*网站公告开始*/
.wzgg{
    width: 100%;
    height: 41px;
    margin: auto;
    line-height: 36px;
    background: #fff;
}
.wzgg .fr {
    float:right;
    display:inline;
}

.wzgg #mrq {
    width: 1200px;
    margin: auto;
    padding: 2px;
}
#Marquee_x {
    overflow: hidden;
    width: 1200px;
}
#Marquee_x ul li, #Marquee_x ul li div {
    margin-right: 10px;
    float: left;
    line-height: 25px;
    overflow: hidden
}
/* 横向滚动必须让所有li左浮动 */
#Marquee_x ul li div {
    float: left;
    line-height: 36px;
    height: 36px;
    width: 430px;
    overflow: hidden;
    padding-right: 20px;
}
#Marquee_x ul li div span {
    display: block;
}
#Marquee_x ul li div a {
    width: 350px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-decoration: none;
    color: #606060;
}
#Marquee_x ul li div a:hover{
    text-decoration: underline;
    color: indianred;
    cursor: pointer;
}
/*网站公告结束*/


/*网页底部样式开始(包括友情链接)*/
/*友情链接*/
.footer{
    min-width: 1200px;
    margin: auto;

}
.footer .f1{
    display: inline-block;
    width: 1200px;
}

.footer .title_bg{
    width: 1200px;
    background:url(../images_pc/list_title_bg.jpg) no-repeat ;
    height:43px;
    line-height:43px;
    margin-top:10px;
    color:#fff;
    font-size:16px;
}
.footer .pad_l_10{
    padding-left: 10px;
}
.footer .bor_1{
    width: 1030px;
    box-sizing: border-box;
}
.footer .pad_10{
    height: 50px;
    width: 1200px;
    padding: 10px 0 10px 0;
}
.bbba li{
    float: left;
    width:200px;
    height:30px;
    line-height:30px;
    text-align: center;
    list-style: none;
}
.bbba li a{
    text-decoration:none ;
    color:#606060 ;
}
.bbba li a:hover{
    color: indianred;
    text-decoration: underline;
}
/*友情链接*/
/*footer*/
.footer .bottom{
    text-align: center;
    width:1202px;
    height:100px;
    background:#40598f;
    margin:12px auto 0;
    color: white;
}
.bottom_text{
    padding-top: 15px;
}
.bottom_text a{
    text-decoration: none;
}

/*footer*/
/*网页底部样式结束(包括友情链接)*/